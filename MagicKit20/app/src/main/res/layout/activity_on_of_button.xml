<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onoffback"
    tools:context=".OnOfButton">

    <TextView
        android:id="@+id/labName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:text="Living Room"
        android:textColor="#CCCCCC"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:text="Accessories"
        android:textColor="#CCCCCC"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labName">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lamp2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                app:layout_constraintStart_toEndOf="@+id/lamp1"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bulboff" />

            <ImageView
                android:id="@+id/lamp4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lamp1"
                app:srcCompat="@drawable/bulboff" />

            <ImageView
                android:id="@+id/lamp3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                app:layout_constraintStart_toEndOf="@+id/lamp2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bulboff" />

            <ImageView
                android:id="@+id/lamp1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bulboff" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:visibility="invisible"
                app:SpinKit_Color="#E7E6E4"
                app:layout_constraintEnd_toEndOf="@+id/lamp1"
                app:layout_constraintTop_toTopOf="@+id/lamp1"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:text="Lamp1"
                android:textColor="#676565"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/lamp1"
                app:layout_constraintStart_toStartOf="@+id/lamp1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:text="Lamp2"
                android:textColor="#676565"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/lamp2"
                app:layout_constraintStart_toStartOf="@+id/lamp2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:text="Lamp4"
                android:textColor="#676565"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/lamp4"
                app:layout_constraintStart_toStartOf="@+id/lamp4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:text="Lamp3"
                android:textColor="#676565"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/lamp3"
                app:layout_constraintStart_toStartOf="@+id/lamp3" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit4"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:visibility="invisible"
                app:SpinKit_Color="#E7E6E4"
                app:layout_constraintEnd_toEndOf="@+id/lamp4"
                app:layout_constraintTop_toTopOf="@+id/lamp4"
                tools:visibility="invisible" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit3"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:visibility="invisible"
                app:SpinKit_Color="#E7E6E4"
                app:layout_constraintEnd_toEndOf="@+id/lamp3"
                app:layout_constraintTop_toTopOf="@+id/lamp3"
                tools:visibility="invisible" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit2"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:visibility="invisible"
                app:SpinKit_Color="#E7E6E4"
                app:layout_constraintEnd_toEndOf="@+id/lamp2"
                app:layout_constraintTop_toTopOf="@+id/lamp2"
                tools:visibility="invisible" />

            <ImageView
                android:id="@+id/timmer1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/lamp1"
                app:layout_constraintEnd_toEndOf="@+id/lamp1"
                app:srcCompat="@drawable/watch"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/timmer4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/lamp4"
                app:layout_constraintEnd_toEndOf="@+id/lamp4"
                app:srcCompat="@drawable/watch"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/timmer3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/lamp3"
                app:layout_constraintEnd_toEndOf="@+id/lamp3"
                app:srcCompat="@drawable/watch"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/timmer2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/lamp2"
                app:layout_constraintEnd_toEndOf="@+id/lamp2"
                app:srcCompat="@drawable/watch"
                tools:visibility="visible" />

        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/add"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tempcircle"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/temparature"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="27"
        android:textColor="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

</android.support.constraint.ConstraintLayout>